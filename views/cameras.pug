extends layout
append scripts
    script(src='/js/bootstrap-switch.js')
append styles
    link(rel='stylesheet', href='/css/bootstrap-switch.css')

block body
    .container
        h1= title

        table-responsive
            table.table.table-striped
                thead
                    tr
                        td Название
                        td Режим
                        td Состояние
                        td Изображение

                tbody
                    for monitor in data
                        tr
                            td=monitor.name
                            td=monitor.function
                            td
                                input(type='checkbox', name="my-checkbox", id = monitor.id, checked  = monitor.enabled != 0)
                            td
                                a(href="/cameras/" + monitor.id)
                                    button.btn.btn-success(type="button") Просмотр

        a(href="/cameras/montage")
            button.btn.btn-info(type="button") Просмотр всех камер


    script.
        $(document).ready(function () {
            $("[name='my-checkbox']").bootstrapSwitch();
        });
